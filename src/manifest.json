{
	"manifest_version": 2,
	
	"name": "Yammer Notify Me",
	"description": "Get desktop notifications from your Yammer feeds.",
	"version": "0.3",
	
	"icons": {
		"128": "icon_128.png"
	},

	"permissions": [
		"tabs", "storage", "notifications", "https://www.yammer.com/"
	],

	"browser_action": {
		"default_icon": {
			"19": "icon.png"
		},
		"default_title": "Yammer Notify Me",
		"default_popup": "popup.html"
	},
	"background": { "scripts": ["background.js"] },
	
	"web_accessible_resources": [
		"48.png"
	]
}
